{
  "name": "ai-video-editor",
  "version": "1.0.0",
  "description": "Automatically edits videos.",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "electron src/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "xcopy src\\main dist\\main /E /I /Y || cp -r src/main dist/",
    "build:python": "node build-python.js",
    "dist": "npm run build:python && npm run build && electron-builder",
    "dist:quick": "npm run build && electron-builder",
    "dist:all": "node scripts/build-all-platforms.js all",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "release:prepare": "node scripts/prepare-release.js prepare",
    "release:check": "node scripts/prepare-release.js check",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "postcss-loader": "^8.2.0",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.5",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.ai-video-editor.app",
    "productName": "AI Video Editor",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/**/*",
      "!python-dist/**/*"
    ],
    "extraResources": [
      "src/python/**/*",
      {
        "from": "python-dist",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "store"
    },
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo"
    },
    "publish": {
      "provider": "github",
      "owner": "atef1995",
      "repo": "ai-video-editor"
    }
  }
}
